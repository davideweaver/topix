{
  "name": "topix",
  "version": "0.1.0",
  "description": "Personal headline aggregator with AI-powered importance filtering",
  "main": "dist/index.js",
  "bin": {
    "topix": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc && tsc-alias",
    "build:pkg": "npm run build && pkg package.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "rss",
    "headlines",
    "news",
    "aggregator",
    "ai",
    "llm",
    "macos",
    "cli",
    "tui"
  ],
  "author": "Dave Weaver <davideweaver@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dweaver/topix"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "express": "^4.19.0",
    "ink": "^5.0.1",
    "inquirer": "^8.2.7",
    "js-yaml": "^4.1.0",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^4.17.0",
    "@types/inquirer": "^8.2.12",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "pkg": {
    "targets": [
      "node20-macos-arm64"
    ],
    "outputPath": "dist",
    "assets": [
      "src/plugins/**/*"
    ],
    "compress": "GZip"
  }
}
